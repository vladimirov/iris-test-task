<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Chrome Desktop">
    <test name="Authorization Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="e2e.AuthorizationTest"/>
        </classes>
    </test>
    <test name="Registration Form Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="registration.InvalidEmailTest"/>
            <class name="registration.RequiredFieldsTest"/>
            <class name="registration.TermsCheckboxTest"/>
        </classes>
    </test>
    <test name="Login Form Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="signin.LoginTest"/>
        </classes>
    </test>
</suite>

